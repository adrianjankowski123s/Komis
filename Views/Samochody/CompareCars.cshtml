@model IEnumerable<Komis.Samochody>

@{
    ViewBag.Title = "View";
}
<style>
    
    table {
        border-collapse: collapse;
        border: none;
        width: 100%;
    }

        table td, th {
            padding: 8px;
        }

        table tr:nth-child(odd) {
            background: #EBEBF0;
        }

        table tr:hover {
            background-color: #ddd;
        }

        table th {
            padding-top: 12px;
            padding-bottom: 12px;
            color: black;
        }

    

</style>

<h2>Porównanie</h2>

<table>

    <tr>
        <th />
        @foreach (var item in Model)
        {
            <th>
                @if (item.Zdjecia.Count != 0)
                {
                    <img width="150"
                         src='@Url.Action("show", "Samochody", new { id = item.Zdjecia.First().Id_zdjecia })' />
                }
            </th>
        }
    </tr>

    <tr>
        <th>Marka: </th>
        @foreach (var item in Model)
        {
            <td>@item.Marka</td>
        }
    </tr>
