@model Komis.Models.UserViewModel

@{
    ViewBag.Title = "Delete";
}

<h3>Czy chcesz usunąć tego użytkownika?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("E-mail:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.currentUser.Email)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Wróć", "Index")
        </div>
    }
</div>
